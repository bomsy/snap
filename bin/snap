#!usr/bin/env node

var main = require('../index');
var program = require('commander');
var pkg = require('../package.json');

program
  .version(pkg.version)

program
  .command('run')
  .description('Start getting snapshots')

program
  .command('install <snapshot>')
  .alias('i')
  .description('Install a specific snapshot of your dependencies')

program
  .command('list')
  .alias('ls')
  .description('List all the snapshots')
  .option('-t, --table', 'List snapshots in a table')
  .option('-f, --full', 'Full detailed list of snapshots')

program.parse(process.argv);

main(program);
